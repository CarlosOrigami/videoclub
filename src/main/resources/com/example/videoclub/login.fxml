<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" fx:id="root" style="-fx-padding: 20;">
    <Label text="Inicio de Sesión" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="usuarioField" promptText="Usuario" style="-fx-pref-width: 200px;" />
    <PasswordField fx:id="contrasenaField" promptText="Contraseña" style="-fx-pref-width: 200px;" />
    <Button fx:id="iniciarSesionButton" text="Iniciar Sesión" style="-fx-pref-width: 200px;" />
    <Label fx:id="mensajeError" text="" style="-fx-text-fill: red;" />
</VBox>
