<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <Label text="Gestión de Alquileres" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <Button fx:id="registrarAlquilerButton" text="Registrar Alquiler" />
        <Button fx:id="finalizarAlquilerButton" text="Finalizar Alquiler" />
    </HBox>
    <TableView fx:id="alquileresTableView" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="Cliente" fx:id="clienteColumn" prefWidth="200" />
            <TableColumn text="Película" fx:id="peliculaColumn" prefWidth="200" />
            <TableColumn text="Fecha de Alquiler" fx:id="fechaAlquilerColumn" prefWidth="100" />
            <TableColumn text="Fecha de Devolución" fx:id="fechaDevolucionColumn" prefWidth="100" />
        </columns>
    </TableView>
</VBox>
