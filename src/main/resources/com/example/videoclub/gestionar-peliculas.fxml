<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <Label text="Gestión de Películas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <Button fx:id="agregarPeliculaButton" text="Agregar Película" />
        <Button fx:id="editarPeliculaButton" text="Editar Película" />
        <Button fx:id="eliminarPeliculaButton" text="Eliminar Película" />
    </HBox>
    <TableView fx:id="peliculasTableView" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="Título" fx:id="tituloColumn" prefWidth="200" />
            <TableColumn text="Género" fx:id="generoColumn" prefWidth="150" />
            <TableColumn text="Año" fx:id="anioColumn" prefWidth="100" />
            <TableColumn text="Disponibilidad" fx:id="disponibilidadColumn" prefWidth="100" />
        </columns>
    </TableView>
</VBox>
