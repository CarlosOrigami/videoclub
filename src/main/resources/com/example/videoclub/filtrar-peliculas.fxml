<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <Label text="Filtrar Películas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10" alignment="CENTER">
        <Label text="Buscar por título o género:" />
        <TextField fx:id="buscarTextField" promptText="Ingrese título o género" />
        <Button fx:id="buscarButton" text="Buscar" />
    </HBox>
    <TableView fx:id="peliculasTableView" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="Título" fx:id="tituloColumn" prefWidth="200" />
            <TableColumn text="Género" fx:id="generoColumn" prefWidth="200" />
            <TableColumn text="Año" fx:id="anioColumn" prefWidth="100" />
            <TableColumn text="Disponibilidad" fx:id="disponibilidadColumn" prefWidth="100" />
        </columns>
    </TableView>
</VBox>

